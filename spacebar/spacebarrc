spacebar -m config title                on

spacebar -m config position             top
spacebar -m config height               24
spacebar -m config padding_left         20
spacebar -m config padding_right        20
spacebar -m config spacing_left         20
spacebar -m config spacing_right        20

spacebar -m config text_font            "Hack:Bold:12.0"
spacebar -m config icon_font            "Hack:Bold:12.0"

spacebar -m config spaces               on
spacebar -m config spaces_for_all_displays     off
spacebar -m config space_icon           
spacebar -m config space_icon_color     0xfffb4934
spacebar -m config space_icon_strip     1 2 3 4 5 6 7 8 9 0 

spacebar -m config clock                on
@REM spacebar -m config clock_icon           
spacebar -m config clock_icon           C 
spacebar -m config clock_icon_color     0xffebdbb2
spacebar -m config clock_format         "%d/%m %I:%M %p"

spacebar -m config power                on
@REM spacebar -m config power_icon_strip      
spacebar -m config power_icon_strip     B B 
spacebar -m config power_icon_color     0xffcd950c
spacebar -m config battery_icon_color   0xffd75f5f

spacebar -m config dnd_icon_color       0xff83a598
spacebar -m config dnd_icon             

spacebar -m config background_color     0xff000000
spacebar -m config foreground_color     0xffebdbb2
@REM spacebar -m config background_color     0xff282828
@REM spacebar -m config foreground_color     0xffebdbb2

echo "spacebar configuration loaded.."