yabai -m config                                 \
    mouse_follows_focus          off            \
    focus_follows_mouse          off            \
    window_origin_display        default        \
    window_placement             second_child   \
    window_zoom_persist          on             \
    window_shadow                on             \
    window_animation_duration    0.0            \
    window_animation_frame_rate  120            \
    window_opacity_duration      0.0            \
    active_window_opacity        1.0            \
    normal_window_opacity        0.90           \
    window_opacity               on             \
    insert_feedback_color        0xffd75f5f     \
    split_ratio                  0.70           \
    split_type                   auto           \
    auto_balance                 on             \
    top_padding                  20             \
    bottom_padding               20             \
    left_padding                 20             \
    right_padding                20             \
    window_gap                   10             \
    layout                       bsp            \
    mouse_modifier               fn             \
    mouse_action1                move           \
    mouse_action2                resize         \
    mouse_drop_action            swap           \
    external_bar                 all:24:0       \

yabai -m rule --add label="System Information" app="^System Information$" manage=off border=off
yabai -m rule --add label="System Preferences" app="^System Preferences$" manage=off border=off
yabai -m rule --add label="Preferences" app="^Preferences$" manage=off border=off
yabai -m rule --add label="Settings" app="^Settings$" manage=off border=off
yabai -m rule --add label="Digital Colour Meter" app="^Digital Colour Meter$" manage=off border=off
yabai -m rule --add label="Calculator" app="^Calculator$" manage=off border=off
yabai -m rule --add label="Simulator" app="^Simulator$" manage=off border=off
yabai -m rule --add label="Android Emulator - emulator:5554" app="^Android Emulator - emulator:5554$" manage=off border=off
yabai -m rule --add label="qemu-system-x86_64" app="^qemu-system-x86_64$" manage=off border=off

echo "yabai configuration loaded.."