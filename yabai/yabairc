#spacebar height
#SPACEBAR_HEIGHT=$(spacebar -m config height)
#$SPACEBAR_HEIGHT
yabai -m config external_bar all:26:0

#settings
yabai -m config mouse_follows_focus          off
yabai -m config focus_follows_mouse          off
yabai -m config window_origin_display        default
yabai -m config window_placement             second_child
yabai -m config window_topmost               off

yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 off

yabai -m config mouse_modifier               fn
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize
yabai -m config mouse_drop_action            swap

yabai -m config window_shadow                off
yabai -m config window_opacity               off
yabai -m config window_opacity_duration      0.0
yabai -m config active_window_opacity        1.0
yabai -m config normal_window_opacity        0.90

yabai -m config window_border                off
yabai -m config window_border_placement      exterior
yabai -m config window_border_width          4
yabai -m config active_window_border_color   0xfffb4934
yabai -m config normal_window_border_color   0xff555555
yabai -m config insert_feedback_color        0xffd75f5f

yabai -m config layout                       float
yabai -m config --space 1 layout bsp

yabai -m config top_padding                  12
yabai -m config bottom_padding               12
yabai -m config left_padding                 12
yabai -m config right_padding                12
yabai -m config window_gap                   06

#rules
yabai -m rule --add label="Finder" app="^Finder$" manage=off border=off
yabai -m rule --add label="System Information" app="^System Information$" manage=off border=off
yabai -m rule --add label="System Preferences" app="^System Preferences$" manage=off border=off
yabai -m rule --add label="Preferences" app="^Preferences$" manage=off border=off
yabai -m rule --add label="Settings" app="^Settings$" manage=off border=off
yabai -m rule --add label="Digital Colour Meter" app="^Digital Colour Meter$" manage=off border=off
yabai -m rule --add label="Flux" app="^Flux$" manage=off border=off
yabai -m rule --add label="Calculator" app="^Calculator$" manage=off border=off
yabai -m rule --add label="Notes" app="^Notes$" manage=off border=off
yabai -m rule --add label="Reminders" app="^Reminders$" manage=off border=off
yabai -m rule --add label="Calendar" app="^Calendar$" manage=off border=off
yabai -m rule --add label="Messages" app="^Messages$" manage=off border=off
yabai -m rule --add label="FaceTime" app="^FaceTime$" manage=off border=off
yabai -m rule --add label="iD" app="^iD$" manage=off border=off
yabai -m rule --add label="Simulator" app="^Simulator$" manage=off border=off
yabai -m rule --add label="Android Emulator - emulator:5554" app="^Android Emulator - emulator:5554$" manage=off border=off
